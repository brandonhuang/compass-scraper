<div class="container">
  <div class="col-md-6 col-md-offset-3">
    <h1><img src="/images/compass.png" alt="Compass Logo">Compass Scraper</h1>
    <p>All your assignments, one place.</p>
    <form class="form-inline" action="/" method="GET">
      <input type="text" class="form-control" name="query" placeholder="Keyword" required>
      <input type="submit" class="btn btn-success" value="Search">
    </form>
    <table class="table table-striped table-bordered">
      <tr>
        <th>ID</th>
        <th>Title</th>
      </tr>
      <% @results.each do |result| %>
          <tr>
            <td><%= result.id %></td>
            <td><a href=<%="http://compass.lighthouselabs.ca/days/setup/activities/#{result.id}" %>><%= result.title %></a></td>
          </tr>
      <% end %>
    </table>
  </div>
</div>
